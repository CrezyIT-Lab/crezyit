'use client';
import { useEffect, useState, useRef, useCallback } from 'react';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { Badge } from '@/components/ui/badge';
import { Tabs, TabsContent, TabsList, TabsTrigger } from '@/components/ui/tabs';
import { ScrollArea } from '@/components/ui/scroll-area';
import { Progress } from '@/components/ui/progress';
import { Bot, Send, Brain, Zap, Settings, Cpu, Database, HardDrive, Gauge, Loader2, Download, CloudDownload, Sun, Moon, Sparkles, Layers } from 'lucide-react';
import ReactMarkdown from 'react-markdown';

export default function App() {
  const [isDark, setIsDark] = useState(true);
  const [messages, setMessages] = useState<any[]>([]);
  const [input, setInput] = useState('');
  const [loading, setLoading] = useState(false);
  const [mode, setMode] = useState('auto');
  const [models, setModels] = useState<any[]>([]);
  const [connected, setConnected] = useState(false);
  const [sys, setSys] = useState({ cpu: { usage: 0 }, memory: { total: 0, used: 0, usagePercent: 0 } });
  const ref = useRef<HTMLDivElement>(null);

  const fetchModels = useCallback(async () => { try { const r = await fetch('/api/ollama'); const d = await r.json(); setConnected(d.ollamaConnected); setModels(d.models || []); } catch {} }, []);
  const fetchSys = useCallback(async () => { try { const r = await fetch('/api/system'); const d = await r.json(); if (d.systemInfo) setSys(d.systemInfo); } catch {} }, []);

  useEffect(() => { fetchModels(); fetchSys(); const i = setInterval(fetchSys, 5000); return () => clearInterval(i); }, []);
  useEffect(() => { ref.current?.scrollIntoView({ behavior: 'smooth' }); }, [messages]);

  const send = async () => {
    if (!input.trim() || loading) return;
    const msg = { id: Date.now().toString(), role: 'user', content: input, timestamp: new Date().toISOString() };
    setMessages(p => [...p, msg]);
    setInput('');
    setLoading(true);
    try {
      const r = await fetch('/api/ai/orchestrate', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ messages: [...messages, msg].map(m => ({ role: m.role, content: m.content })), mode }) });
      const d = await r.json();
      setMessages(p => [...p, { id: (Date.now() + 1).toString(), role: 'assistant', content: d.content, timestamp: new Date().toISOString(), models: d.responses?.map((x: any) => x.model), types: d.queryTypes }]);
    } catch (e: any) { setMessages(p => [...p, { id: (Date.now() + 1).toString(), role: 'assistant', content: 'Error: ' + e.message, timestamp: new Date().toISOString() }]); }
    setLoading(false);
  };

  const fmt = (b: number) => b ? (b / 1073741824).toFixed(1) + ' GB' : '0 B';

  return (
    <div className={`min-h-screen flex flex-col ${isDark ? 'bg-gray-950 text-white' : 'bg-gray-50 text-gray-900'}`}>
      <header className={`border-b ${isDark ? 'border-gray-800 bg-gray-900' : 'bg-white'} px-4 py-3 sticky top-0 z-50`}>
        <div className="max-w-7xl mx-auto flex items-center justify-between">
          <div className="flex items-center gap-3">
            <div className="w-10 h-10 rounded-lg bg-gradient-to-br from-emerald-500 to-teal-500 flex items-center justify-center"><Bot className="w-6 h-6 text-white" /></div>
            <div><h1 className="text-xl font-bold text-emerald-400">CrazyIT</h1><p className="text-xs text-gray-500">Multi-Model v3.0</p></div>
          </div>
          <div className="flex items-center gap-3">
            <select value={mode} onChange={e => setMode(e.target.value)} className={`px-3 py-2 rounded text-sm ${isDark ? 'bg-gray-800 text-white' : 'bg-white'} border`}>
              <option value="auto">ü§ñ –ê–≤—Ç–æ</option>
              <option value="ensemble">üîÄ Ensemble</option>
              <option value="quality">‚≠ê –ö–∞—á–µ—Å—Ç–≤–æ</option>
              <option value="fast">‚ö° –ë—ä—Ä–∑</option>
            </select>
            <Button variant="ghost" size="icon" onClick={() => setIsDark(!isDark)}>{isDark ? <Sun className="w-5 h-5 text-yellow-400" /> : <Moon className="w-5 h-5" />}</Button>
            <Badge variant={connected ? "default" : "destructive"}>{connected ? models.length + ' –º–æ–¥–µ–ª–∏' : 'Offline'}</Badge>
          </div>
        </div>
      </header>

      <main className="flex-1 max-w-7xl mx-auto w-full p-4">
        <Tabs defaultValue="chat">
          <TabsList className="grid grid-cols-4 mb-4 bg-gray-800/50 p-1 rounded-lg">
            <TabsTrigger value="chat">üí¨ –ß–∞—Ç</TabsTrigger>
            <TabsTrigger value="models">üß† –ú–æ–¥–µ–ª–∏</TabsTrigger>
            <TabsTrigger value="storage">üíæ –°—Ç–æ—Ä–∏–¥–∂</TabsTrigger>
            <TabsTrigger value="settings">‚öôÔ∏è –ù–∞—Å—Ç—Ä–æ–π–∫–∏</TabsTrigger>
          </TabsList>

          <TabsContent value="chat">
            <Card className={isDark ? 'bg-gray-800/50' : 'bg-white'}>
              <CardContent className="p-0">
                {mode === 'ensemble' && <div className="p-2 bg-purple-500/10 text-purple-300 text-sm flex items-center gap-2"><Layers className="w-4 h-4" /> Ensemble: –ö–æ–º–±–∏–Ω–∏—Ä–∞ –Ω—è–∫–æ–ª–∫–æ –º–æ–¥–µ–ª–∏</div>}
                {mode === 'auto' && <div className="p-2 bg-emerald-500/10 text-emerald-300 text-sm flex items-center gap-2"><Sparkles className="w-4 h-4" /> –ê–≤—Ç–æ: –ò–∑–±–∏—Ä–∞ –Ω–∞–π-–ø–æ–¥—Ö–æ–¥—è—â–∏—è –º–æ–¥–µ–ª</div>}
                <ScrollArea className="h-[60vh] p-4">
                  {messages.length === 0 && <div className="text-center py-16"><Brain className="w-16 h-16 mx-auto text-emerald-400 mb-4" /><p className="text-lg">Multi-Model AI</p><p className="text-sm text-gray-500">–ò–∑–±–µ—Ä–µ—Ç–µ —Ä–µ–∂–∏–º –∏ –∑–∞–ø–æ—á–Ω–µ—Ç–µ —Ä–∞–∑–≥–æ–≤–æ—Ä</p></div>}
                  {messages.map(m => (
                    <div key={m.id} className={`mb-4 flex ${m.role === 'user' ? 'justify-end' : 'justify-start'}`}>
                      <div className={`max-w-[85%] rounded-xl p-4 ${m.role === 'user' ? 'bg-emerald-600' : isDark ? 'bg-gray-700' : 'bg-gray-100'}`}>
                        {m.types && <div className="flex gap-1 mb-2">{m.types.map((t: string) => <Badge key={t} className="bg-emerald-500/20 text-emerald-400">{t}</Badge>)}</div>}
                        {m.models && <div className="text-xs text-gray-400 mb-2">üß† {m.models.join(' + ')}</div>}
                        <div className="prose prose-invert text-sm"><ReactMarkdown>{m.content}</ReactMarkdown></div>
                      </div>
                    </div>
                  ))}
                  <div ref={ref} />
                </ScrollArea>
                <div className="p-4 border-t border-gray-700 flex gap-2">
                  <Input value={input} onChange={e => setInput(e.target.value)} onKeyPress={e => e.key === 'Enter' && send()} placeholder="–í—ä–ø—Ä–æ—Å..." disabled={loading} className="h-12" />
                  <Button onClick={send} disabled={loading} className="bg-emerald-600 px-6 h-12">{loading ? <Loader2 className="w-5 h-5 animate-spin" /> : <Send className="w-5 h-5" />}</Button>
                </div>
              </CardContent>
            </Card>
          </TabsContent>

          <TabsContent value="models">
            <Card className={isDark ? 'bg-gray-800/50' : 'bg-white'}>
              <CardHeader><CardTitle className="text-emerald-400">üß† –ú–æ–¥–µ–ª–∏ –∏ –°–ø–æ—Å–æ–±–Ω–æ—Å—Ç–∏</CardTitle></CardHeader>
              <CardContent className="space-y-2">
                {models.map(m => (
                  <div key={m.name} className={`p-3 rounded ${isDark ? 'bg-gray-700/50' : 'bg-gray-100'}`}>
                    <div className="flex items-center justify-between"><span className="font-medium">{m.name}</span><Badge variant="outline">{m.size} GB</Badge></div>
                  </div>
                ))}
              </CardContent>
            </Card>
          </TabsContent>

          <TabsContent value="storage">
            <Card className={isDark ? 'bg-gray-800/50' : 'bg-white'}>
              <CardHeader><CardTitle className="text-emerald-400 flex items-center gap-2"><Database className="w-5 h-5" />–ú–æ–¥–µ–ª–∏ ({models.length})</CardTitle></CardHeader>
              <CardContent className="space-y-2">
                {models.map(m => <div key={m.name} className="p-3 rounded bg-gray-700/50 flex items-center justify-between"><span>{m.name}</span><Badge>{m.size} GB</Badge></div>)}
              </CardContent>
            </Card>
          </TabsContent>

          <TabsContent value="settings">
            <div className="grid grid-cols-2 gap-4">
              <Card className={isDark ? 'bg-gray-800/50' : 'bg-white'}>
                <CardHeader><CardTitle className="text-emerald-400 flex items-center gap-2"><Gauge className="w-5 h-5" />–°–∏—Å—Ç–µ–º–∞</CardTitle></CardHeader>
                <CardContent className="space-y-3">
                  <div className="p-3 rounded bg-gray-700/50"><div className="flex justify-between mb-1"><span className="flex items-center gap-2"><Cpu className="w-4 h-4 text-emerald-400" />CPU</span><span>{sys.cpu.usage.toFixed(1)}%</span></div><Progress value={sys.cpu.usage} className="h-2" /></div>
                  <div className="p-3 rounded bg-gray-700/50"><div className="flex justify-between mb-1"><span className="flex items-center gap-2"><HardDrive className="w-4 h-4 text-teal-400" />RAM</span><span>{sys.memory.usagePercent.toFixed(1)}%</span></div><Progress value={sys.memory.usagePercent} className="h-2" /><p className="text-xs text-gray-500 mt-1">{fmt(sys.memory.used)} / {fmt(sys.memory.total)}</p></div>
                </CardContent>
              </Card>
              <Card className={isDark ? 'bg-gray-800/50' : 'bg-white'}>
                <CardHeader><CardTitle className="text-emerald-400">üìä –°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞</CardTitle></CardHeader>
                <CardContent className="grid grid-cols-2 gap-2">
                  <div className="p-4 rounded bg-gray-700/50 text-center"><p className="text-2xl font-bold text-emerald-400">{messages.length}</p><p className="text-xs text-gray-500">–°—ä–æ–±—â–µ–Ω–∏—è</p></div>
                  <div className="p-4 rounded bg-gray-700/50 text-center"><p className="text-2xl font-bold text-teal-400">{models.length}</p><p className="text-xs text-gray-500">–ú–æ–¥–µ–ª–∏</p></div>
                </CardContent>
              </Card>
            </div>
          </TabsContent>
        </Tabs>
      </main>
      <footer className={`border-t ${isDark ? 'border-gray-800 bg-gray-900' : 'bg-white'} py-3 text-center text-xs text-gray-500`}>CrazyIT v3.0 Multi-Model AI</footer>
    </div>
  );
}
